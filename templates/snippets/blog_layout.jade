doctype html
//if lt IE 7
    html(class="no-js ie6 oldie", lang="en")
//if IE 7
    html(class="no-js ie7 oldie", lang="en")
//if IE 8
    html(class="no-js ie8 oldie", lang="en")
// [if gt IE 8] <!
html(class="no-js", lang="en" ng-app="mainApp" ng-controller="MainCtrl as main", ng-init='init(\''+account.website._id+'\')', ng-class="{'hideIntercom': hideIntercom}")
    // <![endif]
    head
        block head
            //- override this to include a different head section (e.g. requirehead.jade)
            block headattributes
                include index_head_styles
                include index_head_scripts

            if !post
                title(data-ng-bind='pageTitle()')

            meta(charset="utf-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            meta(name="description", content=seo.description)
            meta(name="keywords", content=seo.keywords)
            meta(name="author", content=author)
            meta(name="fragment" content="!")

            if website.title !== 'Default Website Title'
                meta(property='og:site_name' value=website.title)

            if post && post.post_title
                title #{post.post_title}
                meta(property='og:type', content="article")
                meta(property='og:title', content=post.post_title)
                meta(property='og:author', content=author)
                meta(property='og:url', content=fullUrl)
                meta(property='og:image', content=post.featured_image)
                meta(property='og:image:url', content=post.featured_image)
                meta(property='og:image:type', content='image/jpeg')
                meta(property='og:description', content=post.post_excerpt)

                meta(name="twitter:card" content="summary")
                meta(name="twitter:title" content=post.post_title)
                meta(name="twitter:description" content=post.post_excerpt)


            if og
                meta(property='og:type', content=og.type)
                meta(property='og:title', content=og.title)

            if og && og.image
                meta(property='og:image', content=og.image)

            base(href="/")
            if account.website.settings.favicon
                link(rel="shortcut icon", href=account.website.settings.favicon)
            else
                link(rel="shortcut icon", href='https://s3.amazonaws.com/indigenous-account-websites/acct_6/favicon.ico')
            if canonicalUrl
                link(rel="canonical", href=canonicalUrl)
            if account.website.metatags
                each meta in account.website.metatags
                    meta(name=meta.name content=meta.value)
            if account.website.settings.https == true
                script(type="text/javascript").
                    if(window.location.protocol != 'https:') {
                      location.href = location.href.replace("http://", "https://");
                    }
            if components
                script(type="text/javascript").
                    var components = !{components};
                    window.indigenous = window.indigenous || {};
                    window.indigenous.precache = window.indigenous.precache || {};
                    window.indigenous.precache.pages = {components:components};

            script(type="text/javascript").
                //we know this is an ssbBlog
                window.indigenous = window.indigenous || {};
                window.indigenous.ssbBlog = true;


            if jsonld
                script(type="application/ld+json").
                    !{jsonld};



    body(
            data-styles,
            class='theme-main navbar-v#{ account.website.nav_version } ssb-main ng-cloak',
            class=(account.website.theme && account.website.theme.handle ? 'ssb-theme-' + account.website.theme.handle : 'ssb-theme-default'), class=( account && account.showhide && account.showhide.blogSocialSharing === false ? 'ssb-blog-hide-social-share' : ''), 
            ng-class="{ 'ssb-social-enabled': isSocialEnabled, 'ssb-social-share-hidden': !isSocialEnabled}",
            ng-cloak
        )

        block body_content
            div(id='fb-root')
            div(id='toolbar')
        block content
        block footer_scripts
        block body_scripts
            include index_body_scripts
            if includeSocial
                script(
                        src="https://lessbuttons.com/script.js?onmobile=hide&facebook=1&twitter=1&linkedin=1&pinterest=1&reddit=1&email=1&other=0"
                    )
