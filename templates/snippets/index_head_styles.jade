style(type="text/css").

    h1, h2, h3, h4, h5, h1 .editable, h2 .editable, h3 .editable, h4 .editable, h5 .editable  { font-family: #{account.website.settings.font_family} !important;}
    body { font-family: #{account.website.settings.font_family_2} !important; }

    .btn-primary {
        background: #{account.website.settings.primary_color};
        border-bottom: 4px solid;
        border-color: #{account.website.settings.primary_highlight};
    }

    .btn-primary:hover {
        background: #{account.website.settings.primary_color};
        border-bottom: 4px solid;
        border-color: transparent;
    }

    .btn-success {
        background: #{account.website.settings.secondary_color};
        border-bottom: 4px solid;
        border-color: #{account.website.settings.secondary_highlight};
    }

    .btn-success:hover {
        background: #{account.website.settings.secondary_color};
        border-bottom: 4px solid;
        border-color: transparent;
    }

    .btn-outline:hover {
        background-color: #{account.website.settings.secondary_color}!important;
    }

    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
      display: none !important;
    }
