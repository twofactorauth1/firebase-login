doctype html
//if lt IE 7
    html(class="no-js ie6 oldie", lang="en")
//if IE 7
    html(class="no-js ie7 oldie", lang="en")
//if IE 8
    html(class="no-js ie8 oldie", lang="en")
// [if gt IE 8] <!
html(class="no-js", lang="en" ng-app="mainApp" ng-controller="MainCtrl as main", ng-init='init(\''+account.website._id+'\')', ng-class="{'hideIntercom': hideIntercom}")
    // <![endif]
    head
        block head
            //- override this to include a different head section (e.g. requirehead.jade)
            block headattributes
                include index_head_styles
                include index_head_scripts
            title(data-ng-bind='pageTitle()')
            meta(charset="utf-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            meta(name="description", content=seo.description)
            meta(name="keywords", content=seo.keywords)
            meta(name="author", content=account.business.name)
            meta(name="fragment" content="!")
            meta(property='og:type', content=og.type)
            meta(property='og:title', content=og.title)
            
            //- <!-- EXP headers -->
            meta(http-equiv="Content-Type",content="text/html;charset=utf-8")
            meta(http-equiv="Cache-Control", content="no-cache")
            meta(http-equiv="Expires", content="0")
            if og.image
                meta(property='og:image', content=og.image)
            base(href="/")
            if account && account.business
                script(type="text/javascript"). 
                    window.indigenous = window.indigenous || {};
                    window.indigenous.precache = window.indigenous.precache || {}; 
                    window.indigenous.business ={'name' :'#{account.business.name}', 'logo': '#{account.business.logo}'};
            if originalAccountBusiness
                script(type="text/javascript"). 
                    window.indigenous = window.indigenous || {};
                    window.indigenous.precache = window.indigenous.precache || {}; 
                    window.indigenous.business ={'name' :'#{originalAccountBusiness.name}', 'logo': '#{originalAccountBusiness.logo}'};
            if account.website.settings.favicon
                link(rel="shortcut icon", href=account.website.settings.favicon)
            else
                if account.orgId == 1
                    link(rel="shortcut icon", href='https://s3.amazonaws.com/indigenous-digital-assets/account_1301/rvlvr-icon_1489761269532.png')
                else if account.orgId == 5
                    link(rel="shortcut icon", href='https://s3.amazonaws.com/indigenous-digital-assets/account_1377/favicon_1508748570313.png')    
                else
                    link(rel="shortcut icon", href='https://s3.amazonaws.com/indigenous-account-websites/acct_6/favicon.ico')
            if canonicalUrl
                link(rel="canonical", href=canonicalUrl)
            if account.website.metatags
                each meta in account.website.metatags
                    meta(name=meta.name content=meta.value)
            if account.website.settings.https == true
                script(type="text/javascript").
                    if(window.location.protocol != 'https:') {
                      location.href = location.href.replace("http://", "https://");
                    }
            if components
                script(type="text/javascript").
                    var components = !{components};
                    window.indigenous = window.indigenous || {};
                    window.indigenous.precache = window.indigenous.precache || {};
                    window.indigenous.precache.pages = {components:components};
            if account.showhide.ssbBlog
                script(type="text/javascript").
                    window.indigenous.ssbBlog = #{account.showhide.ssbBlog};
            if account.showhide.blogSocialSharing
                script(type="text/javascript").
                    window.indigenous.blogSocialSharing = #{account.showhide.blogSocialSharing};

            script.
                console.log('orgId:', #{account.orgId});

        //- script.
        //-     var test = !{JSON.stringify(account.website)};

    body(data-styles, class='theme-main navbar-v#{ account.website.nav_version } ssb-main ng-cloak', class=(account.website.theme && account.website.theme.handle ? 'ssb-theme-' + account.website.theme.handle : 'ssb-theme-default'), class=( account && account.showhide && account.showhide.blogSocialSharing === false ? 'ssb-blog-hide-social-share' : ''), ng-cloak)
        block body_content
            div(id='fb-root')
            div(id='toolbar')
        block content
        block footer_scripts
        block body_scripts
            include index_body_scripts
