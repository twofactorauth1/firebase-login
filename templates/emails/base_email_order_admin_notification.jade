  body(leftmargin='0', marginwidth='0', topmargin='0', marginheight='0', offset='0')
    center
      table#backgroundTable(border='0', cellpadding='0', cellspacing='0', height='100%', width='100%')
        tr
          td(align='center', valign='top', style='padding:20px 0;')
            table#templateContainer(border='0', cellpadding='0', cellspacing='0', width='600', padding='15px')
              tr
                td(align='center', valign='top')
                  table#templateHeader(border='0', cellpadding='0', cellspacing='0', width='630')
                    tr
                      td.headerContent
                        h3 !{title}

              tr
                td(align='center', valign='top')
                  table#templateBody(border='0', cellpadding='0', cellspacing='0', width='600')
                    tr
                      td(valign='top')
                        table(border='0', cellpadding='20', cellspacing='0', width='100%')
                          tr
                            td.bodyContent(valign='top')
                              p.text !{text}
                        table(border='0', cellpadding='20', cellspacing='0', width='100%')
                          tr
                            td.bodyContent(valign='top')
                              div(mc:edit='std_content00')
                                h4 Order #
                                  a(href='#{orderurl}') !{order.order_id}
                                div.orderTableWrap
                                  !{order.billing_address.first_name} !{order.billing_address.last_name}
                                  br
                                  !{order.billing_address.address_1}
                                  br
                                  !{order.billing_address.city}, !{order.billing_address.state}, !{order.billing_address.postcode}
                                  br
                                  table.orderTable(border='0', cellpadding='0', cellspacing='0', width='580')
                                    thead
                                      tr
                                        th Product Name
                                        th(class="orderTd") Price
                                        th(class="orderTd") Quantity
                                        th(class="orderTd") Total
                                    tbody
                                        each val, index in order.line_items
                                          tr
                                            td= val.name
                                            td(class="orderTd")= '$' + val.regular_price
                                            td(class="orderTd")= val.quantity
                                            td(class="orderTd")= '$' + val.total
                                      tr
                                        td(colspan="4", class="spacer")
                                      tr
                                        td(colspan="3", class="text-right")
                                          strong Subtotal
                                        td $ !{order.subtotal}
                                      tr
                                        td(colspan="3", class="text-right")
                                          strong Tax
                                        td $ !{order.total_tax}
                                      tr
                                        td(colspan="3", class="text-right")
                                          strong Total
                                        td $ !{order.total}

