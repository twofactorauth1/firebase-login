        script.
            $(document).ready(function(){
                $('body').on('click', function() {
                    $('#exit_intent_modal').hide();
                });

                $('#exit_intent_modal .modal-footer').on('click', function() {
                    $('#exit_intent_modal').hide();
                });

                $('#exit_intent_modal .modal').on('click', function(e) {
                    e.stopPropagation();
                });
            });
        style.
            * {
                margin: 0;
            }
            .share42-counter {
                display: inline-block;
                vertical-align: top;
                margin-left: 9px;
                position: relative;
                background: #FFF;
                color: #666;
            }
            .share42-counter:before {
                content: "";
                position: absolute;
                top: 0;
                left: -8px;
                width: 8px;
                height: 100%;
            }
            .share42-counter {
                height: 24px;
                padding: 0 7px 0 3px;
                font: 12px/25px Arial, sans-serif;
                background: url(data:image/png;base64,) 100% 0;
            }
            .share42-counter:before {
                background: url(data:image/png;base64,);
            }
        body.standalone-playlist-body
            div#fb-root
            script.
                (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/ru_RU/sdk.js#xfbml=1&appId=390601691078573&version=v2.0";
                fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));
            course-preview.clearfix.standalone-playlist(course="#{course}",is-logged-in-and-subscribed="#{isLoggedInAndSubscribed}",min-height="minHeight",ng-controller="CourseController")
