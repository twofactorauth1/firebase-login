<script type="text/javascript">
    var link = document.createElement("link");
    link.rel = 'stylesheet';
    link.type = 'text/css';
    link.href='/js/libs/redactor/redactor.css';
    document.getElementsByTagName("head")[0].appendChild(link);


    var link = document.createElement("script");
    link.type = "text/javascript";
    link.src='/js/libs/jquery/jquery.js';
    document.getElementsByTagName("head")[0].appendChild(link);


    var link = document.createElement("script");
    link.type = "text/javascript";
    link.src='/js/libs/redactor/redactor.js';
    document.getElementsByTagName("head")[0].appendChild(link);

    var checkForJQuery= function() {
        if (typeof($) !== 'undefined') {
            $(".editable").redactor({
                convertDivs: false,
                //toolbarFixed: true
                air: true,
                airButtons: ['html', '|', 'formatting', '|', 'bold', 'italic', 'deleted', '|', 'unorderedlist', 'orderedlist', 'outdent', 'indent', '|', 'image', 'video', 'file', 'table', 'link', '|', 'alignment', '|', 'horizontalrule'] // 'underline', 'alignleft', 'aligncenter', 'alignright', 'justify'
            });

            checkForJQuery = null;
        } else {
            setTimeout(checkForJQuery, 500);
        }
    };

    checkForJQuery();
</script>
