<div>
    {{#with component}}
    <div class="feature-blocks parallax" data-image="{{#if bgimg.url}}{{bgimg.url}}{{/if}}" data-width="{{#if bgimg.width}}{{bgimg.width}}{{/if}}" data-height="{{#if bgimg.height}}{{bgimg.height}}{{/if}}">
        <div class="inner-page">
            <h1 class="feature-block-title">
                <div class="editable" data-class="title">
                    {{{title}}}
                </div>
            </h1>
            <h3 class="feature-block-subtitle">
                <div class="editable" data-class="subtitle">
                    {{{subtitle}}}
                </div>
            </h3>
            <div class="editable" data-class="text">
                <p class="lead center" data-class="feature-description">{{{text}}}</p>
            </div>
        </div>
    </div>
    {{/with}}
</div>