<div class="section image-gallery">
    {{#with component}}
    	<div class="component-header container">
        <div class="editable" data-class="label">
            <h2 class="section-title center">{{{label}}}</h2>
        </div>

        <div class="editable" data-class="description">
            <p class="center">{{{description}}}</p>
        </div>
    </div>

        <div class="component-body section-colored">
            <div class="container">
            	<div class="row">
				{{#each images}}
					<div class="col-lg-4 col-md-4 col-sm-6">
			            <a href="portfolio-item.html" class="link-gallery-image">
			              <div class="overlay-gallery-image" style="opacity: 0;">
			                <h3 class="center">{{{image-label}}}</h3>
			                <small class="text-muted center">
			                  {{{image-description}}}
			                </small>
			              </div><!-- /.overlay-portfolio -->
			              <img class="img-responsive img-home-portfolio" src="{{{image-url}}}" alt="portfolio 1">
			            </a>
			          </div>
                {{/each}}
                </div>
            </div>
        </div>
    {{/with}}
</div>