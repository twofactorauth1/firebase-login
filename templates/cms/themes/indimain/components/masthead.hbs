<div>
    {{#with component}}
    <div class="component-header hidden">
        <div>
            {{{label}}}
        </div>

        <div>
            {{{description}}}
        </div>
    </div>

    <div class="component-body">
        <div class="masthead {{#if img.parallax}} parallax {{/if}}" data-image="{{img.url}}" data-width="{{img.width}}" data-height="{{img.height}}">
            <div class="row">
                <div class="col-xs-12 col-sm-7">
                    <div class="home-text">
                        <h1>{{title}}</h1>
                        <p>{{{subtitle}}}</p>
                        <div class="col-xs-12">
                            <div class="btn-wrap">
                                <button class="btn btn-success btn-block center col-xs-3" href="{{btn.url}}">{{btn.text}} <i class="fa fa-arrow-circle-o-right"></i></button>
                            </div>
                        </div>
                        <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</div>