    {{#with component}}
    <div class="component-header hidden">
        <div>
            {{{label}}}
        </div>

        <div>
            {{{description}}}
        </div>
    </div>

    <div class="component-body">
        <div class="newsletter">
            <div class="inner-page row">
                <h3>{{title}}</h3>

                <form method="post" name="mc-embedded-subscribe-form" action="http://indigenous.us4.list-manage1.com/subscribe/post?u=5eca79c5c3979f0f11b3fd8a5&amp;id=ef3fecaf28" id="mc-embedded-subscribe-form" class="form validate" target="_blank" novalidate>
                    <div class="col-sm-9">
                        <div class="left-inner-addon">
                            <span><i class='fa fa-envelope'></i>
                            </span>
                            <input type="email" id="mce-EMAIL" placeholder="Enter your email" name="EMAIL" class="subscribe" required>
                        </div>
                    </div>
                    <div class="clearfix mb15 visible-xs"></div>
                    <div class="col-sm-3">
                        <div style="position: absolute; left: -5000px;"><input type="text" name="b_5eca79c5c3979f0f11b3fd8a5_ef3fecaf28" tabindex="-1" value=""></div>
                        <div class="clear">
                            <button type="submit" name="subscribe" id="mc-embedded-subscribe" class="btn btn-outline pull-right btn-block ">IM INTERESTED <i class="fa fa-arrow-circle-o-right"></i></button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    {{/with}}


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <form role="form" id="form1" method="post" action="/api/1.0/contact/signupnews">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">IndigenousIO</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="InputEmail">Email address</label>
                        <input type="email" name="email" class="form-control" id="InputEmail" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="InputFirstName">First Name</label>
                        <input type="text" name="first" class="form-control" id="InputFirstName" placeholder="First Name">
                    </div>
                    <div class="form-group">
                        <label for="InputLastName">Last Name</label>
                        <input type="text" name="last" class="form-control" id="InputLastName" placeholder="Last Name">
                    </div>
                    <div class="form-group">
                        <label for="InputLastName">Customer Type</label>
                        <select class="form-control input-sm" name="customerType">
                            <option value="professional">Professional</option>
                            <option value="business">Business</option>
                            <option value="enterprise">Enterprise</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-primary" id="subscribelist" data-dismiss="modal">Subscribe to list</button>
                </div>
            </div>

        </div>
        </form>
    </div>
</div>


