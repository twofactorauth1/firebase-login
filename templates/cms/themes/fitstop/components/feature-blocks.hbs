<div>
    {{#with component}}
    <div class="component-header container">
        <div class="col-xs-6">
            <div>
                <div class="editable" data-class="label">
                    {{{label}}}
                </div>
                <div class="editable" data-class="description">
                    {{{description}}}
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="btn-group edit-section-btns">
                <a href="products.html" class="btn btn-black-o">Manage</a>
                 <button data-toggle="modal" data-target="#sectionOptions" class="btn btn-black-o">Options</button>
            </div>
        </div>
    </div>
    <div class="feature-blocks parallax " data-image="{{bgimage}}" data-width="800" data-height="450" data-image-class="blur">
        
        <div class="inner-page ">
            {{#if main-feature-title}}
            <div class="col-sm-12 editable f-title" data-class="main-feature-title">
                <h5 class="center centerh4">{{{main-feature-title}}}</h5>
            </div>
            {{/if}}
            {{#each features}}
            <div class="col-sm-4 editable" data-class="feature.item.image">
                <img src="{{{feature-image}}}">
            </div>
            {{/each}}
<!--             <div class="editable">
                <p class="lead center" data-class="feature-description">{{{text}}}</p>
            </div> -->
        </div>
        
        {{!-- <div class="component-body">
            <div class="editable" data-class="value">
                {{{value}}}
            </div>
        </div> --}}
    </div>
    {{/with}}
</div>