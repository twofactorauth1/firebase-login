extends snippets/_layout

block content
    .row
        .main-login.col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
            .logo.margin-top-30
              if account
                if account.business.logo
                    img(src="#{account.business.logo}" style="max-width:300px; max-height:100px; margin: 15px auto; display: block;")
                else
                    h1.center.company-title #{account.company.name}

            if reset
                .box-forgot
                  form.form-forgot(role="form" action="/forgotpassword/reset/#{token}" method="post")
                    fieldset
                      legend
                        | Forget Password?
                      p
                        | Enter your e-mail address below to reset your password before continuing.
                      .form-group
                        span.input-icon
                          input.form-control(type="email", name="username", placeholder="Email")
                          i.fa.fa-envelope-o
                      .form-group.form-actions
                        span.input-icon
                          input.form-control.password(type="password", name="password", placeholder="Password")
                          i.fa.fa-lock
                      .form-group.form-actions
                        span.input-icon
                          input.form-control.password(type="password", name="password2", placeholder="Re-Enter Password")
                          i.fa.fa-lock
                      .form-actions
                        button.btn.btn-primary.pull-right(type="submit", value="Login" role="button")
                          | Reset Password 
                          i.fa.fa-arrow-circle-right
                  // start: COPYRIGHT
                  .copyright
                    | &#169;
                    span.current-year
                    span.text-bold.text-uppercase  Indigenous Software, Inc.
                    | .
                    span All rights reserved
                  // end: COPYRIGHT
                // end: FORGOT BOX

            else
                .box-forgot
                  form.form-forgot(role="form", action="/forgotpassword" method="post")
                    fieldset
                      legend
                        | Forget Password?
                      p
                        | Enter your e-mail address below to reset your password.
                      .form-group
                        span.input-icon
                          input.form-control(type="email", name="username", placeholder="Email")
                          i.fa.fa-envelope-o
                      .form-actions
                        button.btn.btn-primary.pull-right(type="submit", value="Login" role="button")
                          | Recover Password 
                          i.fa.fa-arrow-circle-right
                  // start: COPYRIGHT
                  .copyright
                    | &#169;
                    span.current-year
                    span.text-bold.text-uppercase  Indigenous Software, Inc.
                    | .
                    span All rights reserved
                  // end: COPYRIGHT
                // end: FORGOT BOX

