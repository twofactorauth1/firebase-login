files:
  "/etc/nginx/conf.d/00_indigeweb_enduragive_org.conf":
    owner: root
    group: root
    mode: "000644"
    content: |
      server {
        listen 8080;
        server_name .enduragive.org;

        location / {
          # REDIRECT HTTP to HTTPS - indigeweb-500
#          if ($http_x_forwarded_proto != 'https') {
#            rewrite ^ https://$host$request_uri? permanent;
#          }

          set $hostheader $host;
          if ( $host !~* "indigenous.io" ){
            set $hostheader enduragive.indigenous.io;
          }

          proxy_pass $scheme://nodejs;
          proxy_set_header  Host  enduragive.indigenous.io;
        }
      }
