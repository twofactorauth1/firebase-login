files:
  "/tmp/45_nginx_rewrites.sh":
    owner: root
    group: root
    mode: "000644"
    content: |
      #! /bin/bash

      CONFIGURED=`grep -c "www.indigenous.io" /etc/nginx/nginx.conf`

      if [ $CONFIGURED = 0 ]
        then
          sed -i '/gzip on;/a \    server { listen 8080; server_name indigenous.io; rewrite ^(.*) $scheme://main.indigenous.io$1 permanent; }\n server { listen 8080; server_name www.indigenous.io; rewrite ^(.*) $scheme://main.indigenous.io$1 permanent; }\n' /etc/nginx/nginx.conf
          logger -t nginx_rw "nginx rewrite rules added"
          exit 0
        else
          logger -t nginx_rw "nginx rewrite rules already set"
          exit 0
      fi

container_commands:
  00_appdeploy_rewrite_hook:
    command: cp -v /tmp/45_nginx_rewrites.sh /opt/elasticbeanstalk/hooks/appdeploy/enact
  01_configdeploy_rewrite_hook:
    command: cp -v /tmp/45_nginx_rewrites.sh /opt/elasticbeanstalk/hooks/configdeploy/enact
  02_rewrite_hook_perms:
    command: chmod 755 /opt/elasticbeanstalk/hooks/appdeploy/enact/445_nginx_rewrites.sh /opt/elasticbeanstalk/hooks/configdeploy/enact/45_nginx_rewrites.sh
  03_rewrite_hook_ownership:
    command: chown root:users /opt/elasticbeanstalk/hooks/appdeploy/enact/45_nginx_rewrites.sh /opt/elasticbeanstalk/hooks/configdeploy/enact/45_nginx_https_rw.sh
